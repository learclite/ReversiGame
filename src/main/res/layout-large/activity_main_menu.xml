<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background"
    tools:context="com.example.florian.reversi.activity.MainMenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="130dp"
        android:paddingBottom="130dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:paddingBottom="50dp"
            android:textSize="64dp"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play 1v1"
            android:backgroundTint="@color/colorButtonBackground"
            android:textColor="@color/colorTextWhite"
            android:id="@+id/startGameButton"
            android:onClick="startGame"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play vs AI"
            android:backgroundTint="@color/colorButtonBackground"
            android:textColor="@color/colorTextWhite"
            android:id="@+id/startGameAI"
            android:onClick="startGameAI"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit Game"
            android:backgroundTint="@color/colorButtonBackground"
            android:textColor="@color/colorTextWhite"
            android:id="@+id/exitGameButton"
            android:onClick="exitGame"

            />

    </LinearLayout>

</RelativeLayout>
